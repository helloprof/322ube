<div class="container" style="padding-top:60px">
  <h1>Add New Video</h1>

  <form action="/videos/add" method="POST" enctype="multipart/form-data">
    <div class="form-group">
      <label for="channelID">Channel</label>

      <select name="channelID" id="channelID" class="form-select">
        {{#each data}}
          <option value={{channelID}}>{{channel}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="title">
    </div>

    <div class="form-group">
      <label for="video">Thumbnail/Video Upload</label>
      <input type="file" class="form-control" id="video" name="video">
    </div>

    <div class="form-group">
      <label for="description">Description</label>
      <input type="text" class="form-control" id="description" name="description">
    </div>
    </br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
